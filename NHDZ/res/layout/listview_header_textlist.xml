<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	    android:id="@+id/textlist_fragment_header_quick_tools" 
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:orientation="horizontal">
	    
    
    	<LinearLayout 
    	    android:layout_width="wrap_content"
    	    android:layout_height="wrap_content"
    	    android:layout_weight="1"
    	    android:background="#F5F5F5"
    	    android:gravity="center">

    		<TextView
    		    android:id="@+id/quick_tools_publish"
    		    android:layout_width="wrap_content"
    		    android:layout_height="30dp"
    		    android:drawableLeft="@drawable/ic_publish_essay"
    		    android:gravity="center_vertical"
    		    android:text="我要投稿"
    		    android:textSize="15sp" />
	
		</LinearLayout>	       	    
	      
    	<View 
    	    android:layout_width="1dp"
    	    android:layout_height="match_parent"
    	    android:background="#CCC"
    	    />
    	
    	<LinearLayout 
    	    android:layout_width="wrap_content"
    	    android:layout_height="wrap_content"
    	    android:layout_weight="1"
    	    android:background="#F5F5F5"	
    	    android:gravity="center"> 	    
		    <TextView 
		          android:id="@+id/quick_tools_review"
			      android:layout_width="wrap_content"
			      android:layout_height="30dp"
			      android:drawableLeft="@drawable/ic_review_essay"
			      android:gravity="center_vertical"		      
			      android:text="我要审核"
			      android:textSize="15sp"/>
	    </LinearLayout>
</LinearLayout>	       	